@model List<Blog_Website.Models.Domain.Tag>
@{
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="table-responsive pt-5">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-striped project-orders-table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Display Name</th>
                                <th colspan="2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var tag in Model)
                                {
                                <tr>
                                    <td>@tag.Id</td>
                                    <td>@tag.Name</td>
                                    <td>@tag.DisplayName</td>
                                    <td>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">

                                            <a button type="button" class="btn btn-success btn-sm btn-icon-text mr-3" asp-action="EditTag" asp-controller="AdminTags" asp-route-id="@tag.Id">
                                                Edit
                                                <i class="typcn typcn-edit btn-icon-append"></i>
                                            </a>
                                           @*  <a type="button" class="btn btn-danger btn-sm btn-icon-text" asp-action="DeleteTag" asp-controller="AdminTags" asp-route-id="@tag.Id">
                                                Delete
                                                <i class="typcn typcn-delete-outline btn-icon-append"></i>
                                            </a> *@
                                        </div>
                                    </td>
                                </tr>
                                }

                    </table>
                }
                else
                {
                    <p>No tags found</p>
                }
            </div>
        </div>
    </div>
</div>