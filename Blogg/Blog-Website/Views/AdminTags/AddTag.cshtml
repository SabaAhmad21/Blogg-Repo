@model Blog_Website.Models.ViewModels.AddTagVM
@{
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Admin tags</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="TagName" placeholder="Name" asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="DisplayName">Display Name</label>
                    <input type="text" class="form-control" id="DisplayName" placeholder="Displayname" asp-for="DisplayName">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button type="reset"  class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>