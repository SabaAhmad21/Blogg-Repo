@model Blog_Website.Models.ViewModels.EditTagVM;
@{
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Admin tags</h4>
            @if (Model != null)
            {
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" asp-for="Id" readonly>
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="TagName" placeholder="Name" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label for="DisplayName">Display Name</label>
                        <input type="text" class="form-control" id="DisplayName" placeholder="Displayname" asp-for="DisplayName">
                    </div>

                    <button type="submit" class="btn btn-dark mr-2">Update</button>
                    <button type="submit" class="btn btn-danger" asp-action="DeleteTag" asp-controller="AdminTags">Delete</button>


                </form>
            }
            else
            {
                <p> Tags not found</p>
            }
        </div>
    </div>
